<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.codeclan.com.wordcounter2.MainPage"
    android:background="@mipmap/android_app_lightblue"
    >



    <EditText
        android:id="@+id/sentence_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Write a sentence"
        android:textSize="30dp"
        tools:layout_editor_absoluteY="39dp"
        tools:layout_editor_absoluteX="122dp"
        android:layout_marginTop="18dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/word_count_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get word count"
        android:textSize="20dp"
        android:onClick="onWordCountButtonClicked"
        tools:layout_editor_absoluteY="139dp"
        tools:layout_editor_absoluteX="120dp"
        android:layout_below="@+id/sentence_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="69dp" />

    <TextView
        android:id="@+id/word_count_answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
